GCCGIT = ~/gcc.git
GCCVER = 8.4.0

GCCTAG = releases/gcc-$(GCCVER)
GCCBRANCH = releases/gcc-8

update:
	git -C $(GCCGIT) remote update -p
	git -C $(GCCGIT) rev-parse --verify --quiet refs/tags/$(GCCTAG) > /dev/null
	git -C $(GCCGIT) rev-parse --verify --quiet $(GCCBRANCH) > /dev/null
	git -C $(GCCGIT) diff $(GCCTAG)..$(GCCBRANCH) -- \* ':!*/DATESTAMP' | filterdiff --exclude-from-file="exclude-testsuite" --clean > new.patch~
	git show HEAD:gcc-stable-branch.patch | sed -n '/^diff --git/,$$p' > current.patch~
	! diff current.patch~ new.patch~ > /dev/null
	git -C $(GCCGIT) shortlog $(GCCTAG)..$(GCCBRANCH) > gcc-stable-branch.patch
	cat new.patch~ >> gcc-stable-branch.patch
	rm -f *.patch~
	mv gcc-stable-branch.patch 000-gcc8-stable-branch.patch
	cp -r 000-gcc8-stable-branch.patch ~/ledex/toolchain/gcc/patches/8.4.0/000-gcc8-stable-branch.patch

	test -d ~/binutils-gdb || git clone http://sourceware.org/git/binutils-gdb.git ~/binutils-gdb
	(cd ~/binutils-gdb ; git remote update -p > /dev/null 2>&1 ; git diff binutils-2_31_1..origin/binutils-2_31-branch | filterdiff --exclude="*/bfd/version.h";) > binutils-stable-branch.patch
	mv binutils-stable-branch.patch 000-binutils31.1-stable-branch.patch
	cp -r 000-binutils31.1-stable-branch.patch ~/ledex/toolchain/binutils/patches/2.31.1/000-binutils31.1-stable-branch.patch
