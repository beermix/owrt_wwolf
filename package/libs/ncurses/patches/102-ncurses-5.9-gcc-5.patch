diff --color -Naur ncurses-6.2-20200912-orig/ncurses/base/MKlib_gen.sh ncurses-6.2-20200912/ncurses/base/MKlib_gen.sh
--- ncurses-6.2-20200912-orig/ncurses/base/MKlib_gen.sh	2020-09-16 16:17:31.303160962 +0300
+++ ncurses-6.2-20200912/ncurses/base/MKlib_gen.sh	2020-09-16 16:19:11.422298037 +0300
@@ -501,11 +501,22 @@
 	-e 's/gen_$//' \
 	-e 's/  / /g' >>$TMP
 
+cat >$ED1 <<EOF
+s/  / /g
+s/^ //
+s/ $//
+s/P_NCURSES_BOOL/NCURSES_BOOL/g
+EOF
+
+# A patch discussed here:
+#	https://gcc.gnu.org/ml/gcc-patches/2014-06/msg02185.html
+# introduces spurious #line markers.  Work around that by ignoring the system's
+# attempt to define "bool" and using our own symbol here.
+sed -e 's/bool/P_NCURSES_BOOL/g' $TMP > $ED2
+cat $ED2 >$TMP
+
 $preprocessor $TMP 2>/dev/null \
-| sed \
-	-e 's/  / /g' \
-	-e 's/^ //' \
-	-e 's/_Bool/NCURSES_BOOL/g' \
+| sed -f $ED1 \
 | "$AWK" -f $AW2 \
 | sed -f $ED3 \
 | sed \
